{
    "breadcrumbs.enabled": true,
    "telemetry.telemetryLevel": "off",
    "editor.accessibilitySupport": "off",
    "editor.fontWeight": 300,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.minimap.enabled": false,
    "editor.folding": false,
    "editor.fontLigatures": false,
    "editor.lineNumbers": "on",
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 2,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.wordWrap": "on",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Tomorrow Night Eighties",
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "statusBarItem.remoteBackground": "#272727",
        "statusBarItem.remoteForeground": "#ccc",
        "activityBar.background": "#272727",
        "editor.background": "#272727",
        "editor.lineHighlightBackground": "#282C34",
        "editor.lineHighlightBorder": "#3f3f3f",
        "editor.selectionBackground": "#3E4451",
        "editorCursor.foreground": "#ccc",
        "statusBar.background": "#272727",
        "statusBar.noFolderBackground": "#272727",
        "statusBar.debuggingBackground": "#272727",
        "terminalCursor.foreground": "#3178C6",
        "titleBar.activeBackground": "#272727",
        "titleBar.inactiveBackground": "#272727",
        "sideBar.background": "#272727",
        "sideBar.border": "#272727",
        "tab.activeBackground": "#21252b",
        "tab.border": "#272727",
        "tab.inactiveBackground": "#272727",
        "terminal.background": "#272727",
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "variable, support.other.variable, string.other.link, entity.name.tag, entity.other.attribute-name, meta.tag, declaration.tag, variable.parameter, entity.name.class, entity.name.type.class, support.type, support.class",
                "settings": {
                    "foreground": "#CCC",
                }
            }
        ]
    },
    "files.defaultLanguage": "markdown",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "security.workspace.trust.untrustedFiles": "open",
    "update.showReleaseNotes": false,
    "r.bracketedPaste": true,
    "r.removeLeadingComments": true,
    "r.rpath.mac": "/usr/local/bin/R",
    "r.rterm.mac": "/opt/homebrew/bin/radian",
    "r.rterm.option": [
        "--no-save",
        "--no-restore",
        "--r-binary=/usr/local/bin/R"
    ],
    "r.rmarkdown.codeLensCommands": [
        "r.runCurrentChunk",
        "r.runAllChunks"
    ],
    "[r]": {
        "editor.defaultFormatter": "REditorSupport.r",
    },
    "r.session.levelOfObjectDetail": "Detailed",
    "r.session.data.rowLimit": 1000,
    "r.plot.useHttpgd": true,
    "r.lsp.diagnostics": true,
    "r.lsp.enabled": true,
    "window.commandCenter": false,
    "extensions.ignoreRecommendations": true,
    "explorer.confirmDragAndDrop": false,
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "git.openRepositoryInParentFolders": "always",
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.12",
    "python.experiments.enabled": false,
    "rainbow_csv.align_in_scratch_file": true,
    "explorer.confirmDelete": false,
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "editor.rulers": [
        {"column":  80, "color": "#282C34"},
        {"column": 100, "color": "#282C34"},
        {"column": 120, "color": "#282C34"}
    ],
}
